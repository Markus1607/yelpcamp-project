
<% include ../partials/header %>

  <div class="container">
    <h3> <%= message %> </h3>
    <header class="jumbotron text-center">
      <div class="container">
        <h1>Welcome to Yelpcamp</h1>
        <h4>View our hand picked campgrounds from all over the world</h4>
        <p>
          <a class="btn btn-primary btn-large"href="/campgrounds/new">Add new Campground</a>
        </p>
      </div>

    </header>

    <div class="row">
      <div class="col-md-12">
        <h3 class="text-center">Our most popular campgrounds</h3>
      </div>
    </div>
    <div class="row" style="display: flex; flex-wrap: wrap;">
      <% campdata.forEach(function(campground){ %>
        <div class="col-md-4 col-sm-6">
            <div class="thumbnail">
              <img src="<%= campground.image %>" alt="">
              <div class="caption text-center">
                <h4><%=campground.name %></h4>
              </div>
              <p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary text-center">More Info</a>
              </p>
            </div>

        </div>
      <% }); %>
    </div>




    <a href="/campgrounds"> Back</a>


  </div>



<% include ../partials/footer %>
